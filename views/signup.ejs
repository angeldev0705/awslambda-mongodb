<html>
  <head>
    <title>Signup</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <style>
      .test {
        color: #0069d9;
        font-size: 20px;
        text-align: center;
      }
      .login-box {
        margin: auto;
        margin-top: 40px;
      }
      .form-group label {
        font-size: 13px;
      }
      .form-group-remeber {
        font-size: 10px;
      }
      .forgot-password {
        color: blue;
        display: grid;
        text-align: end;
      }
      .form-control {
        font-size: 10px;
      }
      .btn-primary {
        margin-top: 30px;
        font-size: 12px;
        width: 100%;
      }
      .form-control:focus {
        box-shadow: none;
        border: 1px solid #007bff;
      }
      .close:focus {
        border: none;
      }
      .alert-dismissible {
        font-size: 10px;
      }
      .alert-dismissible .close {
        padding: 6px 9px;
        border: none;
      }
      .close:not(:disabled):not(.disabled) {
        cursor: pointer;
        border: none;
      }
      .not-account {
        font-size: 10px;
        margin-top: 20px;
        text-align: center;
      }
      .not-account b {
        color: #0062cc;
      }
      .profile-badge {
        padding: 5px;
        position: relative;
      }
      #profile-image-upload {
        display: none;
      }
      #profile-image {
        width: 20%;
        height: 20%;
        cursor: pointer;
        border-radius: 50%;
      }
      select.form-control:not([size]):not([multiple]) {
        height: calc(27px + 2px);
      }
      .alert-success {
        padding: 9px 5px 0px 15px;
        color: green;
        font-size: 13px;
      }
    </style>
    <script>
      function previewFile() {
        var preview = document.querySelector("img");
        var file = document.querySelector("input[type=file]").files[0];
        var reader = new FileReader();

        reader.addEventListener(
          "load",
          function () {
            preview.src = reader.result;
          },
          false
        );

        if (file) {
          reader.readAsDataURL(file);
        }
      }
      $(function () {
        $("#profile-image").on("click", function () {
          $("#profile-image-upload").click();
        });
      });
    </script>
  </head>
  <body>
    <!-- <div>
            <%- include('_head'); -%>
        </div> -->
    <div class="container">
      <div class="col-md-12">
        <div class="col-md-8 login-box">
          <form method="POST" action="/signup">
            <div>
              <h4 class="test">Create Account</h4>
            </div>
            <!-- <img src="https://dummyimage.com/600x400/000/"> -->
            <!-- <div class="profile-badge profile-pic">
              <img
                alt="User Pic"
                src="https://d30y9cdsu7xlg0.cloudfront.net/png/138926-200.png"
                id="profile-image"
                name="profile"
                height="200"
              />
              <input
                id="profile-image-upload"
                class="hidden"
                type="file"
                onchange="previewFile()"
              />
              <div style="color: #999"></div>
            </div> -->
            <% if(msg !='') { %>
            <div
              class="alert alert-danger alert-dismissible fade show"
              role="alert"
            >
              <strong>Required: </strong> <%= msg %>
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% } %>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="exampleInputEmail1">First Name:</label>
                <input
                  type="text"
                  class="form-control"
                  name="firstname"
                  aria-describedby="emailHelp"
                  placeholder="John"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Last Name:</label>
                <input
                  type="text"
                  class="form-control"
                  name="lastname"
                  aria-describedby="emailHelp"
                  placeholder="Doe"
                />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Email:</label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  aria-describedby="emailHelp"
                  placeholder="example@gmail.com"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Username:</label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  placeholder="Enter username"
                />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Phone number:</label>
                <input
                  type="text"
                  class="form-control"
                  name="phone_number"
                  placeholder="Enter phone number"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Select role:</label>
                <select class="form-control" required name="role">
                  <option value="admin" selected disabled>Select role</option>
                  <option value="admin">Admin</option>
                  <option value="customer">Customer</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Password:</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Enter password"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Confirm password:</label>
                <input
                  type="password"
                  class="form-control"
                  name="confirmpassword"
                  placeholder="Enter confirm password"
                />
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12 not-account">
                  <p>
                    Already have an account? <a href="/login"><b>Login</b></a>
                  </p>
                </div>
              </div>
            </div>
          </form>
          <div class="col-md-4"></div>
        </div>
      </div>
    </div>
    <!-- <div>
            <%- include('_footer'); -%>
        </div> -->
  </body>
</html>
